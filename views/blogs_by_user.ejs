<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blogs By <%= userBlogs[0]?.username || "User" %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Blogs by <%= userBlogs[0]?.username || "User" %></h1>
  <div class="container">
    <% if (userBlogs.length === 0) { %>
      <h2>No Blogs Found</h2>
    <% } %>
    <% for (let post of userBlogs) { %>
      <div class="card">
        <p><strong>Title:</strong> <%= post.title %></p>
        <p><strong>Content:</strong> <%= post.content %></p>
        <p><strong>Created At:</strong> <%= post.createdAt %></p>
        <a href="/blogs/<%= post.id %>" class="btn">View</a>
      </div>
    <% } %>
    <a href="/blogs/<%= userBlogs[0]?.username %>/<%= userBlogs[0]?.userId %>/new" class="btn">Create New Blog</a>
  </div>
</body>
</html>
